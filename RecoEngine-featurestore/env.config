# RecoEngine Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration - Aerospike Cloud
# IMPORTANT: Replace with your actual Aerospike Cloud instance details
AEROSPIKE_HOST=your-aerospike-cloud-host.aerospike.internal
AEROSPIKE_PORT=4000
AEROSPIKE_NAMESPACE=churnprediction

# TLS Configuration for Aerospike Cloud (required for Aerospike Cloud)
AEROSPIKE_USE_TLS=true
# Path to CA certificate file for server authentication (relative to app root)
AEROSPIKE_TLS_CAFILE=ascloud.ca
# TLS name for SNI (Server Name Indication) - typically same as AEROSPIKE_HOST
AEROSPIKE_TLS_NAME=your-aerospike-cloud-host.aerospike.internal

# Authentication credentials for Aerospike Cloud
# SECURITY: Never commit actual credentials to git! Use .env file for production.
AEROSPIKE_USERNAME=your-username
AEROSPIKE_PASSWORD=your-password

# QuickMart Integration
QUICKMART_API_URL=http://localhost:3010

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Model Configuration
MODEL_PATH=churn_model.joblib
MODEL_METRICS_PATH=churn_model_metrics.json

# Training Configuration
DEFAULT_TRAINING_SAMPLES=5000
DEFAULT_TEST_SIZE=0.2
RANDOM_STATE=42

# Docker Configuration (when running in containers)
# AEROSPIKE_HOST=quickmart_aerospike
# QUICKMART_API_URL=http://quickmart_backend_api:3001
