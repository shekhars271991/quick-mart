# RecoEngine Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
AEROSPIKE_HOST=localhost
AEROSPIKE_PORT=3000
AEROSPIKE_NAMESPACE=churnprediction

# QuickMart Integration
QUICKMART_API_URL=http://localhost:3011  # 3011 for local dev, 3010 for Docker

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# Model Configuration
MODEL_PATH=churn_model.joblib
MODEL_METRICS_PATH=churn_model_metrics.json

# Training Configuration
DEFAULT_TRAINING_SAMPLES=5000
DEFAULT_TEST_SIZE=0.2
RANDOM_STATE=42

# =============================================================================
# Agent Flow Configuration (LangGraph with Aerospike Checkpointing)
# =============================================================================
# Set to 'true' to use AI agent-based workflow with LangGraph
# Set to 'false' (default) to use manual step-by-step processing
USE_AGENT_FLOW=true

# Docker Configuration (when running in containers)
# AEROSPIKE_HOST=quickmart_aerospike
# QUICKMART_API_URL=http://quickmart_backend_api:3001
