# RecoEngine Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
AEROSPIKE_HOST=localhost
AEROSPIKE_PORT=3000
AEROSPIKE_NAMESPACE=churnprediction

# QuickMart Integration
QUICKMART_API_URL=http://localhost:3010

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Model Configuration
MODEL_PATH=churn_model.joblib
MODEL_METRICS_PATH=churn_model_metrics.json

# Training Configuration
DEFAULT_TRAINING_SAMPLES=5000
DEFAULT_TEST_SIZE=0.2
RANDOM_STATE=42

# Docker Configuration (when running in containers)
# AEROSPIKE_HOST=quickmart_aerospike
# QUICKMART_API_URL=http://quickmart_backend_api:3001
